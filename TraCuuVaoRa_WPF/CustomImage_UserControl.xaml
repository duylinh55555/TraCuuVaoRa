<UserControl x:Class="TraCuuVaoRa_WPF.CustomImage_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TraCuuVaoRa_WPF"
             mc:Ignorable="d" Height="205" Width="299">
    <Grid>
        <Image x:Name="originalImage" MouseMove="OriginalImage_MouseMove" MouseLeave="OriginalImage_MouseLeave" Stretch="Uniform"/>
        <Popup x:Name="zoomPopup" Placement="MousePoint" IsOpen="False">
            <Image x:Name="zoomedImage" Stretch="Uniform"/>
        </Popup>
    </Grid>
</UserControl>
